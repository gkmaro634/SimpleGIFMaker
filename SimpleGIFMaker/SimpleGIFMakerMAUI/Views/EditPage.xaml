<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleGIFMaker.Views.EditPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Edit"
             Loaded="ContentPage_Loaded"
             >
    <VerticalStackLayout>
        <Button Text="Back" Command="{Binding BackCommand}"/>

        <Grid RowDefinitions="*, Auto">
            <ScrollView
                HeightRequest="600"
                WidthRequest="400"
                        >
                <Grid HeightRequest="1920" WidthRequest="1080">
                    <toolkit:MediaElement
                x:Name="media"
                ShouldShowPlaybackControls="True"
                />
                    <Border StrokeThickness="2" Stroke="Red"/>
                </Grid>

            </ScrollView>
        </Grid>

        <!--<HorizontalStackLayout>
            <Button Text="Cut" Command="{Binding ChangeModeCommand}" CommandParameter="Cut"/>
            <Button Text="Crop" Command="{Binding ChangeModeCommand}" CommandParameter="Crop"/>
            <Button Text="GIF Setting" Command="{Binding ChangeModeCommand}" CommandParameter="GIF Setting"/>
        </HorizontalStackLayout>-->

    </VerticalStackLayout>
</ContentPage>